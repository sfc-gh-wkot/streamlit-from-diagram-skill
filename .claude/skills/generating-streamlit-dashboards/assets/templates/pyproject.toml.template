# Localhost dependencies (uv)
# Usage: uv sync && uv run streamlit run streamlit_app.py

[project]
name = "streamlit-app"
version = "0.1.0"
requires-python = ">=3.13"
dependencies = [
    "streamlit>=1.51",  # Min 1.51, check SiS release notes for max
    "pandas",
    "numpy",
    "altair>=5.0",
]

[dependency-groups]
dev = ["ruff"]

[tool.ruff]
line-length = 100
target-version = "py313"

[tool.ruff.lint]
select = ["E", "F", "I", "N", "W", "UP", "B", "SIM"]

[tool.ruff.format]
quote-style = "double"
